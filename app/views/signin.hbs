<div class="panel panel-default">
  <div class="panel-heading">Login</div>
  <div class="panel-body">
    <form id="signin" name="signin" method="post" action="signin">
      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
      </div>
      <div class="form-group">
        <label for="password">Password <small><a href="/forgotPassword">Forgot Password?</a></small></label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
      </div>
      
      <button type="submit" class="btn btn-primary">Submit</button> <a href="/signup"><button type="button" class="btn btn-info pull-right">Sign Up</button></a>
    </form>
    <br />

  </div>
</div>
